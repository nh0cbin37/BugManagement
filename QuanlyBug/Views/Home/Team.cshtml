@using (Html.BeginForm("AddMember", "Home", FormMethod.Post))
{
    <div class="modal modal-blur fade" id="modal-addmember" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm thành viên vào dự án của bạn</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row mb-3 align-items-end">
                        <div class="col">
                            <label class="form-label">Tên hoặc Email</label>
                            <input type="text" class="form-control" name="nameOrEmail" >
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Chọn dự án</label>
                        <select class="form-select" name="nameProject">
                            @foreach (var item in Model)
                            {
                                if(item.Role == "admin")
                                {
                                    <option >@item.Name</option>
                                }
                            }
                        </select>
                    </div>
                    <div>
                        <label class="form-label">Phân quyền</label>
                        <select class="form-select" name="role">
                            <option value="1">Tester</option>
                            <option value="2">Developer</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn me-auto" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Gửi</button>
                </div>
            </div>
        </div>
    </div>

}